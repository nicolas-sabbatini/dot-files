# Quick alias edit
alias edit-alias='nvim ~/.bash_aliases'
# Colors
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# ls alias
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CFlh'
# local http server
alias server='simple-http-server --nocache --upload'
# better cat
alias cat='bat'
# Test midi files (timidity required)
alias play-midi='timidity'
# Pictures in the terminal
alias icat='kitty +kitten icat --scale-up'
# better grep 
alias grep='rg'
# repl
alias rust-repl='evcxr_repl'
